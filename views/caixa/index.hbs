<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.min.js"></script>
    <meta charset="utf-8" />
    <title>caixa</title>
</head>

<body>
    <div class="container-fluid">
        <div class="card text-center">
            <div class="card-header">
                <h5 class="card-title">CAIXA üõí</h5>
            </div>
            <div class="card-body">
                <form class="needs-validation" novalidate>
                    <div class="row align-items-center">
                        <div class="col-6 mb-3">
                            <input type="text" class="form-control form-control-lg" placeholder="Numero Pedido"
                                id="numeroInput" required>
                        </div>
                        <div class="col-6 mb-3">
                            <input type="text" class="form-control form-control-lg" placeholder="Descri√ß√£o Pedido"
                                id="descricaoInput">
                        </div>
                        <div class="col-6">
                            <div class="form-check text-start">
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault1" value="true">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Viagem
                                </label>
                            </div>
                            <div class="form-check text-start">
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault2" value="false" checked>
                                <label class="form-check-label " for="flexRadioDefault2">
                                    Comer aqui
                                </label>
                            </div>
                        </div>
                        <div class="col-6">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-muted">
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="fs-1 text-center bg-secondary text-white">üêô Preparando</div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row row-gap-3">
                                {{#each preparando}}
                                <div class="col-sm-6 fs-1 text-end">{{this.numero}}</div>
                                <button type="button" onclick="update('cancelar','{{this.numero}}')"
                                    class="p-2 col-sm-2 btn btn-warning">Cancelar</button>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    (function () {
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')
        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    } else {
                        let numero = $('#numeroInput').val();
                        let viagem = document.querySelector('.form-check-input').checked;
                        let descricao = $('#descricaoInput').val();
                        $.ajax({
                            url: '/pedido',
                            data: JSON.stringify({ numero, viagem, descricao }),
                            processData: false,
                            contentType: 'application/json',
                            type: 'POST',
                            error: function (error) {
                                alert('Pedido ja registrado')
                            },
                        })
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
    async function update(action, pedido) {
        $.ajax({
            url: `/pedido/${action}`,
            processData: false,
            type: 'PUT',
            data: JSON.stringify({ numero: pedido }),
            processData: false,
            contentType: 'application/json',
            success: function (data) {
                window.location.reload();
            },
        })
    }
</script>
</html>