<!DOCTYPE html>
<html>

<head>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/jquery-3.7.0.min.js"></script>
    <meta charset="utf-8" />
    <title>caixa</title>
</head>

<body>
    <div class="container-fluid">
        <div class="card text-center">
            <div class="card-header">
                <h5 class="card-title">CAIXA üõí</h5>
            </div>
            <div class="card-body">
                <form class="needs-validation" novalidate>
                    <div class="row align-items-center">
                        <div class="col-6 mb-3">
                            <input type="text" class="form-control form-control-lg" placeholder="Numero Pedido"
                                id="numeroInput" autocomplete="off" required>
                        </div>
                        <div class="col-6 mb-3">
                            <input type="text" class="form-control form-control-lg" placeholder="Descri√ß√£o Pedido"
                                id="descricaoInput" autocomplete="off">
                        </div>
                        <div class="col-6">
                            <div class="form-check text-start">
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault1" value="true">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Viagem
                                </label>
                            </div>
                            <div class="form-check text-start">
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault2" value="false" checked>
                                <label class="form-check-label " for="flexRadioDefault2">
                                    Comer aqui
                                </label>
                            </div>
                        </div>
                        <div class="col-6">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-muted">
                <div class="mb-3">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="fs-1 text-center bg-secondary text-white">üêô Preparando</div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row row-gap-3" id="pedido">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    load()
    setInterval(function () { load() }, 1000);
    (function () {
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    } else {
                        let numero = $('#numeroInput').val();
                        let viagem = document.querySelector('.form-check-input').checked;
                        let descricao = $('#descricaoInput').val();
                        $.ajax({
                            url: '/pedido',
                            data: JSON.stringify({ numero, viagem, descricao }),
                            processData: false,
                            contentType: 'application/json',
                            type: 'POST',
                            error: function (error) {
                                alert('Pedido ja registrado')
                            },
                        })
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
    async function update(action, pedido) {
        $.ajax({
            url: `/pedido/${action}`,
            processData: false,
            type: 'PUT',
            data: JSON.stringify({ numero: pedido }),
            processData: false,
            contentType: 'application/json',
        })
    }
    function load() {
        $.ajax({
            url: `/pedidos`,
            type: 'GET',
            contentType: 'application/json',
            success: function (data) {
                loadPedidos(data.preparando);
            },
        })
    }
    function loadPedidos(pedido, tipo) {
        $(`#pedido`).children().remove();
        if (pedido.length == 0) {
            $(`#pedido`).append(`<div class="col-sm-6"></div>`);
        } else {
            for (let i = 0; i < pedido.length; i++) {
                let str = "";
                const viagem = pedido[i].viagem ? "üöó" : "üçΩÔ∏è";
                str += ` <div class="col-sm-3 fs-2 text-center">
                            ${viagem}
                        </div>
                        <div class="col-sm-2 fs-2 text-center">${pedido[i].descricao}</div>
                        <div class="col-sm-3 fs-1 text-center">${pedido[i].numero}</div>
                        <button type="button" onclick="update('cancelar','${pedido[i].numero}')"
                            class="col-sm-2 btn btn-warning">Cancelar</button>`
                $(`#pedido`).append(` ${str}`);
            }
        }
    }
</script>

</html>