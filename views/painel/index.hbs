<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.7.0.slim.js"
        integrity="sha256-7GO+jepT9gJe9LB4XFf8snVOjX3iYNb0FHYr5LI1N5c=" crossorigin="anonymous"></script>
    <meta charset="utf-8" />
    <title>painel</title>
</head>

<body>
    <div class="row">
        <div class="col-sm-6">
            <div class="fs-1 text-start bg-secondary text-white">🐙 Preparando</div>
        </div>
        <div class="col-sm-6">
            <div class="fs-1 text-start bg-danger text-white">😋 Pronto</div>
        </div>
    </div>
    <div class="row" id="pedidos">
    </div>
</body>
<script>
    setTimeout(() => {
        window.location.reload();
    }, "1000");
    const pronto = {{{ pronto }}};
    const preparando = {{{ preparando }}};
    loadPedidos(preparando);
    loadPedidos(pronto);
    function loadPedidos(pedido) {
        const numRow = 6;
        if (pedido.length == 0) {
            $("#pedidos").append(`<div class="col-sm-6"></div>`);
        } else {
            const smPedido = Math.max(Math.floor(6 / Math.ceil(pedido.length / numRow)), 1);
            const colNumber = Math.min(Math.ceil(pedido.length / numRow), 6);
            const more = Math.ceil(pedido.length / numRow) > 6;
            for (let i = 0; i < colNumber; i++) {
                let size = i + 1 == colNumber ? pedido.length : (i + 1) * numRow;
                let str = "";
                for (let j = i * numRow; j < size; j++) {
                    const viagem = pedido[j].viagem ? "🚗" : "🍽️";
                    str += `<div class="h1 text-start">${viagem} ${pedido[j].numero}</div>`
                }
                $("#pedidos").append(`<div class="col-sm-${smPedido}">
            ${str}
        </div>` );
            }
        }
    }
</script>

</html>