<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.min.js"></script>
    <meta charset="utf-8" />
    <title>entrega</title>
</head>

<body>
    <div class="container mx-auto p-2">
        <div class="mb-3">
            <div class="row">
                <div class="col-sm-6">
                    <div class="fs-1 text-start bg-secondary text-white">üêô Preparando</div>
                </div>
                <div class="col-sm-6">
                    <div class="fs-1 text-start bg-danger text-white">üòã Pronto</div>
                </div>
                <div class="col-sm-6" id="preparando">
                    {{!-- {{#each preparando}}
                    <div class="d-flex align-items-center border bg-info">
                        <div class="col-sm-1 fs-2 text-center">
                            {{#if this.viagem}}
                            üöó
                            {{else}}
                            üçΩÔ∏è
                            {{/if}}
                        </div>
                        <div class="col-sm-3 fs-3 text-center">{{this.descricao}}</div>
                        <div class="col-sm-5 fs-1 text-center">{{this.numero}}</div>
                        <button type="button" onclick="update('pronto','{{this.numero}}')"
                            class="p-2 col-sm-2 btn btn-success">Pronto</button>
                    </div>
                    {{/each}} --}}
                </div>
                <div class="col-sm-6" id="pronto">
                    {{!-- {{#each pronto}}
                    <div class="d-flex align-items-center border  bg-info">
                        <div class="col-sm-3 fs-2 text-center">
                            {{#if this.viagem}}
                            üöó
                            {{else}}
                            üçΩÔ∏è
                            {{/if}}
                        </div>
                        <div class="col-sm-3 fs-2 text-center">{{this.descricao}}</div>
                        <div class="col-sm-3 fs-1 text-center">{{this.numero}}</div>
                        <button type="button" onclick="update('finalizar','{{this.numero}}')"
                            class="col-sm-2 btn btn-success">Finalizar</button>
                    </div>
                    {{/each}} --}}
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    setInterval(function () { load() }, 1000);
    function update(action, pedido) {
        $.ajax({
            url: `/pedido/${action}`,
            processData: false,
            type: 'PUT',
            data: JSON.stringify({ numero: pedido }),
            processData: false,
            contentType: 'application/json',
        })
    }
    function load() {
        $.ajax({
            url: `/pedidos`,
            type: 'GET',
            contentType: 'application/json',
            success: function (data) {
                refreshPedidos(data);
            },
        })
    }
    function refreshPedidos(data) {
        loadPedidos(data.pronto, 'pronto')
        loadPedidos(data.preparando, 'preparando')
    }
    function loadPedidos(pedido, tipo) {
        const numRow = 6;
        $(`#${tipo}`).children().remove();
        if (pedido.length == 0) {
            $(`#${tipo}`).append(`<div class="col-sm-6"></div>`);
        } else {
            const smPedido = Math.max(Math.floor(6 / Math.ceil(pedido.length / numRow)), 1);
            const colNumber = Math.min(Math.ceil(pedido.length / numRow), 6);
            const more = Math.ceil(pedido.length / numRow) > 6;
            for (let i = 0; i < colNumber; i++) {
                let size = i + 1 == colNumber ? pedido.length : (i + 1) * numRow;
                let str = "";
                for (let j = i * numRow; j < size; j++) {
                    const viagem = pedido[j].viagem ? "üöó" : "üçΩÔ∏è";
                    const operacao = tipo === 'pronto' ? "finalizar" : "pronto";
                    str += `<div class="pedidos d-flex align-items-center border bg-info">
                        <div class="col-sm-3 fs-2 text-center">
                            ${viagem}
                        </div>
                        <div class="col-sm-2 fs-2 text-center">${pedido[j].descricao}</div>
                        <div class="col-sm-5 fs-1 text-center">${pedido[j].numero}</div>
                        <button type="button" onclick="update('${operacao}','${pedido[j].numero}')"
                            class="col-sm-2 btn btn-success">${operacao}</button>
                    </div>`
                }
                $(`#${tipo}`).append(` ${str}`);
            }
        }
    }
</script>

</html>