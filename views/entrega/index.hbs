<script>
    const socket = io('http://localhost:3000');
    socket.on('connection', data =>load() );
    socket.on('all', data => load());
    function update(action, pedido) {
        $.ajax({
            url: `/pedido/${action}`,
            processData: false,
            type: 'PUT',
            data: JSON.stringify({ numero: pedido }),
            processData: false,
            contentType: 'application/json',
        })
    }
    function load() {
        $.ajax({
            url: `/pedidos`,
            type: 'GET',
            contentType: 'application/json',
            success: function (data) {
                refreshPedidos(data);
            },
        })
    }
    function refreshPedidos(data) {
        loadPedidos(data.pronto, 'pronto')
        loadPedidos(data.preparando, 'preparando')
    }
    function loadPedidos(pedidos, tipo) {
        $(`#${tipo}`).children().remove();
        if (pedidos.length == 0) {
            $(`#${tipo}`).append(`<div class="col-sm-6"></div>`);
        } else {
            for (let i = 0; i < pedidos.length; i++) {
                let pedido = pedidos[i]
                let str = "";
                if (tipo == 'pronto') {
                    str += buildPronto(pedido);
                } else {
                    str += buildPreparando(pedido);
                }
                $(`#${tipo}`).append(` ${str}`);
            }
        }
    }
    function buildPreparando(pedido) {
        const viagem = pedido.viagem ? "üöó" : "‚ùå";
        let numero = pedido.quantidade > 1 ? `${pedido.numero} - ${pedido.numero + pedido.quantidade -1}` : `${pedido.numero}`
        return `<div class="pedidos d-flex align-items-center bg-info">
                        <div class="col-1 fs-1 text-center">${numero}</div>
                        <div class="col-1 fs-1 text-center">${pedido.quantidade}</div>
                        <div class="col-1 fs-1 text-center bg-info">
                            ${viagem}
                        </div>
                        <div class="col-1 fs-1 text-center">${pedido.preferencial ? "üÖøÔ∏è": "‚ùå"}</div>
                        <div class="col-1 fs-1 text-center">${pedido.refeicao ? "üçΩÔ∏è": "‚ùå"}</div>
                        <div class="col-4 fs-3 text-start">${pedido.descricao}</div>
                        <button type="button" onclick="update('pronto','${pedido.numero}')"
                            class="col-2 btn btn-success">pronto</button>
                    </div>`
    }
    function buildPronto(pedido) {
        const viagem = pedido.viagem ? "üöó" : "üçΩÔ∏è";
        let numero = pedido.quantidade > 1 ? `${pedido.numero} - ${pedido.numero + pedido.quantidade - 1}` : `${pedido.numero}`
        return `<div class="pedidos d-flex align-items-center bg-info">
                        <div class="col-2 fs-1 text-center bg-info">
                            ${viagem}
                        </div>
                        <div class="col-4 fs-1 text-center">${numero}</div>
                        <button type="button" onclick="update('finalizar','${pedido.numero}')"
                            class="col-sm-4 btn btn-success">finalizar</button>
                    </div>`
    }
</script>

