<!DOCTYPE html>
<html>

<head>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/jquery-3.7.0.min.js"></script>
    <meta charset="utf-8" />
    <title>entrega</title>
</head>

<body>
    <div class="container mx-auto p-2">
        <div class="mb-3">
            <div class="row">
                <div class="col-sm-6">
                    <div class="fs-1 text-start bg-secondary text-white">üêô Preparando</div>
                </div>
                <div class="col-sm-6">
                    <div class="fs-1 text-start bg-danger text-white">üòã Pronto</div>
                </div>
                <div class="col-sm-6" id="preparando">
                </div>
                <div class="col-sm-6" id="pronto">
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    load();
    setInterval(function () { load() }, 1000);
    function update(action, pedido) {
        $.ajax({
            url: `/pedido/${action}`,
            processData: false,
            type: 'PUT',
            data: JSON.stringify({ numero: pedido }),
            processData: false,
            contentType: 'application/json',
        })
    }
    function load() {
        $.ajax({
            url: `/pedidos`,
            type: 'GET',
            contentType: 'application/json',
            success: function (data) {
                refreshPedidos(data);
            },
        })
    }
    function refreshPedidos(data) {
        loadPedidos(data.pronto, 'pronto')
        loadPedidos(data.preparando, 'preparando')
    }
    function loadPedidos(pedido, tipo) {
        $(`#${tipo}`).children().remove();
        if (pedido.length == 0) {
            $(`#${tipo}`).append(`<div class="col-sm-6"></div>`);
        } else {
            for (let i = 0; i < pedido.length; i++) {
                let str = "";
                const viagem = pedido[i].viagem ? "üöó" : "üçΩÔ∏è";
                const operacao = tipo === 'pronto' ? "finalizar" : "pronto";
                str += `<div class="pedidos d-flex align-items-center border bg-info">
                        <div class="col-sm-3 fs-2 text-center">
                            ${viagem}
                        </div>
                        <div class="col-sm-2 fs-2 text-center">${pedido[i].descricao}</div>
                        <div class="col-sm-5 fs-1 text-center">${pedido[i].numero}</div>
                        <button type="button" onclick="update('${operacao}','${pedido[i].numero}')"
                            class="col-sm-2 btn btn-success">${operacao}</button>
                    </div>`
                $(`#${tipo}`).append(` ${str}`);
            }
        }
    }
</script>

</html>